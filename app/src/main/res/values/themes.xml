<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/lightBlue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/darkBlue</item>
        <item name="android:paddingStart">@dimen/defPadding</item>
        <item name="titleTextAppearance">@style/MyToolbarTitleText</item>
    </style>

    <!-- Toolbar title text style -->
    <style name="MyToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>